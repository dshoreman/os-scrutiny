<?xml version="1.0"?>
<model>
    <mount>//OPNsense/Scrutiny</mount>
    <items>
        <version>
            <collector type="TextField" volatile="true"><default>-</default></collector>
            <smart type="TextField" volatile="true"><default>-</default></smart>
        </version>
        <api_endpoint type="TextField">
            <mask>@^https?://([a-z0-9-.])+:([0-9]){1,5}$@</mask>
            <validationMessage>
                Endpoint must include http(s):// and port
            </validationMessage>
        </api_endpoint>
        <debug type="BooleanField">
            <default>0</default>
        </debug>
        <enabled type="BooleanField">
            <default>0</default>
        </enabled>
        <syslog type="BooleanField">
            <default>0</default>
        </syslog>
        <host_id type="TextField" />
    </items>
</model>
