<?xml version="1.0"?>
<model>
    <mount>//OPNsense/Scrutiny</mount>
    <items>
        <settings>
            <collector_version type="TextField" volatile="true">
                <default>-</default>
            </collector_version>
            <smart_version type="TextField" volatile="true">
                <default>-</default>
            </smart_version>
            <api_endpoint type="TextField">
                <mask>@^https?://([a-z0-9-.])+:([0-9]){1,5}$@</mask>
                <validationMessage>
                    Endpoint must include http(s):// and port
                </validationMessage>
            </api_endpoint>
            <debug type="BooleanField">
                <default>0</default>
            </debug>
            <enabled type="BooleanField">
                <default>0</default>
            </enabled>
            <host_id type="TextField" />
        </settings>
    </items>
</model>
